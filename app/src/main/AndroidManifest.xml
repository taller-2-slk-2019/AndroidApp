<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taller2.hypechatapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.CreateChannelActivity"></activity>
        <activity
            android:name=".ui.activities.ChannelChatActivity"
            android:label="@string/title_activity_channel_chat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.CreateOrganizationActivityStepOne"
            android:label="@string/new_organization_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.CreateOrganizationActivityStepTwo"
            android:label="@string/new_organization_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>