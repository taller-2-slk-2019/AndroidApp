<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelTextTitleView" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LabelTextCreationView" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputTextCreationView" parent="android:Widget.TextView">
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="ProfileImageCreationView">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ProfileTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="ProfileItemTextView" parent="ProfileTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileResponseTextView" parent="ProfileTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/BlueAccent100</item>
    </style>

    <style name="ButtonPrimaryAction" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>

    <style name="ButtonSecondaryAction" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:backgroundTint">@color/DarkGrey</item>
    </style>

    <style name="SwitchCreationView" parent="Theme.AppCompat.Light">
        <item name="android:switchMinWidth">60dp</item>
        <item name="android:switchPadding">10dp</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/DarkGrey</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
